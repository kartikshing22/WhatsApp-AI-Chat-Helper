#############################################
# LLM PROVIDER SETTINGS
#############################################

# Options: gemini | openai | claude
LLM_PROVIDER=gemini


#############################################
# OpenAI Settings
#############################################

OPENAI_API_KEY=your-openai-key-here
OPENAI_MODEL=gpt-4o-mini


#############################################
# Claude (Anthropic) Settings
#############################################

ANTHROPIC_API_KEY=your-claude-api-key-here
CLAUDE_MODEL=claude-3-5-sonnet-20241022


#############################################
# Google Gemini Settings
#############################################

# Google calls it GOOGLE_API_KEY (Gemini API)
GOOGLE_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-2.5-flash-lite


#############################################
# WhatsApp Web Automation Settings
#############################################

# Run Playwright browser in headless mode: true / false
BROWSER_HEADLESS=false

# Browser timeout in milliseconds (30 seconds default)
BROWSER_TIMEOUT=30000


#############################################
# User Settings
#############################################

# If true, ask before sending AI reply
HUMAN_APPROVAL=true

# Number of past messages to send to LLM
MAX_MESSAGES_TO_READ=30


#############################################
# AI Response Settings
#############################################

# Influence tone of AI messages
RESPONSE_TONE="romantic, respectful, natural"

# Max characters in generated reply
MAX_RESPONSE_LENGTH=500


#############################################
# Safety Control
#############################################

# Enable AI safety filters
ENABLE_SAFETY_FILTER=true


#############################################
# Logging Settings
#############################################

# Options: DEBUG | INFO | WARNING | ERROR
LOG_LEVEL=INFO
